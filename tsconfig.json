{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "noEmit": false,
    "outDir": "dist",
    "paths" : {
      "@src/*": ["src/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./node_modules/@types/**/*.d.ts",
    "./types/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tmp",
    "./tests/**/*.test.ts"
  ]
}

